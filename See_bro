--// Player
local player = game.Players.LocalPlayer
local UIS = game:GetService("UserInputService")

--// GUI
local gui = Instance.new("ScreenGui")
gui.Name = "BrainrotDupeGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

--// Main Frame (SMALL)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 360, 0, 190)
mainFrame.Position = UDim2.new(0.5, -180, 0.5, -95)
mainFrame.BackgroundColor3 = Color3.fromRGB(15,15,15)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Parent = gui

--// Make it draggable (WORKING VERSION)
mainFrame.Draggable = true

--// Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundTransparency = 1
title.Text = "BRAINROT DUPLICATION UTILITY"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.Parent = mainFrame

--// Button
local dupeButton = Instance.new("TextButton")
dupeButton.Size = UDim2.new(0.85, 0, 0, 45)
dupeButton.Position = UDim2.new(0.075, 0, 0.35, 0)
dupeButton.BackgroundColor3 = Color3.fromRGB(140, 0, 255)
dupeButton.Text = "DUPE 50M+ BRAINROTS"
dupeButton.TextColor3 = Color3.fromRGB(255,255,255)
dupeButton.TextScaled = true
dupeButton.Font = Enum.Font.GothamBold
dupeButton.Parent = mainFrame

--// Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, -20, 0, 40)
loadingText.Position = UDim2.new(0, 10, 0.3, 0)
loadingText.BackgroundTransparency = 1
loadingText.Text = ""
loadingText.TextWrapped = true
loadingText.TextColor3 = Color3.fromRGB(255,255,255)
loadingText.TextScaled = true
loadingText.Font = Enum.Font.Gotham
loadingText.Visible = false
loadingText.Parent = mainFrame

--// Loading Bar BG
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.85, 0, 0, 12)
barBG.Position = UDim2.new(0.075, 0, 0.65, 0)
barBG.BackgroundColor3 = Color3.fromRGB(40,40,40)
barBG.Visible = false
barBG.Parent = mainFrame

--// Loading Fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(170,0,255)
barFill.Parent = barBG

--// Click Event
dupeButton.MouseButton1Click:Connect(function()

	dupeButton.Visible = false
	loadingText.Visible = true
	barBG.Visible = true
	
	loadingText.Text = "Found 1 high-value targets. Beginning duplication protocol."

	-- Infinite loading
	while true do
		for i = 0, 1, 0.02 do
			barFill.Size = UDim2.new(i, 0, 1, 0)
			task.wait(0.03)
		end
		barFill.Size = UDim2.new(0, 0, 1, 0)
	end
	
end)
